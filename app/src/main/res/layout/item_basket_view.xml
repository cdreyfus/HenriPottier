<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/basket_item_layout"
    android:layout_width="match_parent"
    android:layout_marginEnd="12dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/basket_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_book_thumbnail"
        android:maxWidth="100dp"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/hp3" />


    <TextView
        android:id="@+id/basket_item_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/basket_item_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Henri Potier et les reliques de la mortddlvlmsvmsdlsdmlsdv lsdsdvd " />

    <TextView
        android:id="@+id/basket_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/basket_item_label"
        app:layout_constraintTop_toBottomOf="@id/basket_item_label"
        tools:text="35â‚¬" />


    <TextView
        android:id="@+id/item_basket_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/basket_item_label"
        app:layout_constraintTop_toBottomOf="@id/basket_item_price"
        tools:text="x5" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

</android.support.constraint.ConstraintLayout>